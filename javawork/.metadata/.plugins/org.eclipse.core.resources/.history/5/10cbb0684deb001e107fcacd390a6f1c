package day0326;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class Ex17_ExceptionMunje {
    
    static final String FILENAME = "C:\\naver0314\\score.txt";
    
    public static void readScore() {
        int count = 0;
        int total = 0;
        
        try (BufferedReader br = new BufferedReader(new FileReader(FILENAME))) {
            String line;
            while ((line = br.readLine()) != null) {
                try {
                    int score = Integer.parseInt(line.trim());
                    total += score;
                    count++;
                } catch (NumberFormatException e) {
                    // This line is not a valid integer, ignore it
                }
            }
        } catch (IOException e) {
            System.out.println("Error reading file: " + e.getMessage());
            return;
        }
        
        if (count > 0) {
            double average = (double) total / count;
            System.out.println("개수: " + count + "개");
            System.out.println("총점: " + total);
            System.out.printf("평균: %.2f%n", average);
        } else {
            System.out.println("유효한 점수가 없습니다.");
        }
    }

    public static void main(String[] args) {
        readScore(); // Call the method to read scores and calculate statistics
    }
}
